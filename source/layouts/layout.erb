<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "EcoStage" %></title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react-with-addons.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react-dom.js"></script>
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  <body class="<%= page_classes %>">
    <header class="header">
      <nav class="nav header-nav">
        <ul class="nav-list">
          <li class="nav-item nav-item-left">
            <a class="nav-link" href="#about">sobre</a>
          </li>
          <li class="nav-item nav-item-left">
            <a class="nav-link" href="#work">trabalhos</a>
          </li>
          <li class="nav-item nav-item-logo">
            <a href="/" class="nav-link header-logo">
              <%= image_tag "tree-logo.svg", class: "logo" %>
            </a>
          </li>
          <li class="nav-item nav-item-right">
            <a class="nav-link" href="#team">equipe</a>
          </li>
          <li class="nav-item nav-item-right">
            <a class="nav-link" href="#contact">contato</a>
          </li>
        </ul>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= partial 'partials/seo'%>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "EcoStage" %></title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react-with-addons.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react-dom.js"></script>
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>

  </head>
  <body class="<%= page_classes %>">

    <% if current_page.data.intro? %>
      <%= partial 'partials/intro'%>
    <% end %>

    <%= partial 'partials/header'%>
    
    <%= yield %>
    
    <%= partial 'partials/footer'%>

  </body>
</html>